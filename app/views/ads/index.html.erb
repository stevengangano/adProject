<div class="container">

  <nav aria-label="breadcrumb" style="margin-top: 30px;">
    <ol class="breadcrumb breadcrumb-hide">
      <li style="margin-right: 10px;">Categories: </li>
      <a href="<%=categories_url%>"><li style='margin-right: 20px;'> All </li> </a>
      <% @side_bar_categories.each do |category| %>
        <li class=''><%= link_to category.title, category_path(category), style: 'margin-right: 20px;' %></li>
      <% end %>
      <!-- <li class="breadcrumb-item active" aria-current="page">Data</li> -->
    </ol>
  </nav>


  <div class="row">
    <div class="col-md-9">
      <div class="row">
        <% @ads.each do |ad| %>
        <div class="col-md-4">
          <div class="card mb-4 box-shadow">
              <a href="<%=info_url(ad)%>"><%= image_tag(ad.ad_image, class:'card-img-top', alt:"Card image cap") %></a>
          </div>
        </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-3 sidebar">
      <ul class="list-group">
        <li class="list-group-item">
          <h6 style="text-decoration:underline; margin-bottom: 15px;"> Categories </h6>
          <a href="<%=categories_url%>"><p> All </p> </a>
          <% @side_bar_categories.each do |category| %>
          <p class=""><%= link_to category.title, category_path(category, class:'') %></p>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>
